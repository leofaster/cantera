			    	'</div>');
			    }

			    $(window).scroll(function(){
			    	if(tamEscrito > 0) {
					    if ($(this).scrollTop() > 250 && 
					    	$(this).scrollTop() < $('#contenido').css('height').split('px')[0] - 
					    	$('#publicidad').css('height').split('px')[0] - 56) {
					        $('#publicidad').css('top',$(this).scrollTop() - 200);
					    } else {
					    	if ($(this).scrollTop() <= 250) {
					    		$('#publicidad').css('position','');
					    		$('#publicidad').css('top','50px');
					    		$('#publicidad').css('right','0px');
					    	}

					    	if($(this).scrollTop() >= $('#contenido').css('height').split('px')[0] - 
