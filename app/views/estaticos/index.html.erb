<body>


<div id="loginArea">
	<div id="autenticacion">
        <% if usuario_signed_in? %>
          <%= link_to 'Cerrar Sesión', destroy_usuario_session_path, :method => 'delete', :class => "btn btn-success" %>
        <% else %>
            <a href="/iniciar_sesion" class="btn btn-success">Iniciar Sesión</a>
          <a href="/registrar" class="btn btn-success">Registro</a>
        <% end %>
    </div>
</div>



<div id="header">
